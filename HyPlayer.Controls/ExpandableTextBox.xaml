<UserControl
    x:Class="HyPlayer.Controls.ExpandableTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HyPlayer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock      
            x:Name="MyTextBlock"
            IsTextSelectionEnabled="{x:Bind local:ExpandableTextBox.SelectableProperty ,Mode = OneWay}"
            Text="{x:Bind local:ExpandableTextBox.TextProperty,Mode = OneWay}"
            Foreground="{x:Bind Foreground,Mode = OneWay}"
            FontSize="{x:Bind FontSize,Mode = OneWay}"
            MaxLines="{x:Bind local:ExpandableTextBox.MaxLinesProperty,Mode = OneWay}"
            TextWrapping="{x:Bind local:ExpandableTextBox.TextWrappingProperty,Mode = OneWay}"
            FontWeight="{x:Bind FontWeight,Mode = OneWay}" />
        <HyperlinkButton x:Name="ExpandButton" Margin="-12,0,0,0" Content="{x:Bind local:ExpandableTextBox.ButtonTextProperty,Mode = OneWay}" Click="ExpandOrCollapseText" />
    </StackPanel>
</UserControl>
